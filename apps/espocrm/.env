# ============================================================================
# EspoCRM Environment (.env)
# ============================================================================
# Fill in real values before deployment.
# ============================================================================

# --------------------------------------------------------------------------
# Database Credentials
# --------------------------------------------------------------------------
DB_ROOT_PASSWORD=change_me_root_password
DB_APP_PASSWORD=change_me_app_password

# --------------------------------------------------------------------------
# EspoCRM Admin (First Run Only)
# --------------------------------------------------------------------------
ESPOCRM_ADMIN_USERNAME=admin
ESPOCRM_ADMIN_PASSWORD=change_me_admin_password

# --------------------------------------------------------------------------
# Public URLs / Domains
# --------------------------------------------------------------------------
# Full public URL used by the app internally
ESPOCRM_PUBLIC_URL=https://apps-crm.example.com
# Host only, used by Traefik router
ESPOCRM_PUBLIC_HOST=apps-crm.example.com

# --------------------------------------------------------------------------
# WebSocket URL (Public)
# --------------------------------------------------------------------------
ESPOCRM_WEBSOCKET_URL=wss://apps-crm.example.com/ws
