#============================================================
# EditorConfig is awesome: https://EditorConfig.org
#============================================================

# -- Root configuration for all editors in this repository --#
root = true

# -- Unix-style newlines with a newline ending every file --#
[*]
indent_style = space # Use spaces for indentation
indent_size = 2    # Indent with 2 spaces
end_of_line = lf   # Use LF for line endings
charset = utf-8   # Use UTF-8 character encoding
trim_trailing_whitespace = true # Remove trailing whitespace
insert_final_newline = true # Ensure file ends with a newline

#-- YAML files --#
[*.yml]
indent_style = space # Use spaces for indentation
indent_size = 2   # Indent with 2 spaces
